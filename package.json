    "jsdom": "11.6.2",
    "node-sass": "4.7.2",
    "null-loader": "0.1.1",
    "pre-git": "3.17.1",
    "raw-loader": "0.5.1",
    "sass-loader": "6.0.7",
    "semantic-release": "15.0.3",
    "style-loader": "0.20.3",
    "testdouble": "3.11.0",
    "testdouble-jest": "1.0.1",
    "to-string-loader": "1.1.5",
    "ts-jest": "22.4.1",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "tslint-config-standard": "7.0.0",
    "typescript": "2.7.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.5",
    "webpack-merge": "4.1.1",
    "webpack-node-externals": "1.6.0",
    "webpack-s3-plugin": "1.0.0-rc.0"
  },
  "greenkeeper": {
    "ignore": [
      "@angular/animations",
      "@angular/cdk",
      "@angular/common",
      "@angular/compiler",
      "@angular/core",
      "@angular/forms",
      "@angular/http",
      "@angular/material",
      "@angular/platform-browser",
      "@angular/platform-browser-dynamic",
      "@angular/router",
      "@types/webpack",
      "angular-in-memory-web-api",
      "angular2-moment",
      "hammerjs",
      "awesome-typescript-loader",
      "extract-text-webpack-plugin",
      "favicons-webpack-plugin",
      "html-webpack-plugin",
      "webpack",
      "webpack-dev-server",
      "webpack-merge",
      "webpack-node-externals",
      "webpack-s3-plugin"
    ]
  },
  "config": {
    "pre-git": {
      "commit-msg": "conventional",
      "allow-untracked-files": true
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "setupTestFrameworkScriptFile": "./test/helper.ts",
    "testMatch": [
      "<rootDir>/test/**.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./test/helper.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "commit": "./node_modules/.bin/commit-wizard",
    "clean": "rm -rf {coverage,tmp}",
    "lint": "./node_modules/.bin/tslint '{src,test}/**/*.ts'",
    "jest": "./node_modules/.bin/jest",
    "test": "npm run clean && npm run lint && npm run jest",
    "webpack": "./node_modules/.bin/webpack -p",
    "webpack:start": "./node_modules/.bin/webpack-dev-server --config ./webpack.start.js --progress --hot --content-base src",
    "webpack:deploy": "npm run webpack -- --config ./webpack.deploy.js",
    "compile": "npm run clean && npm run webpack",
    "semantic-release": "./node_modules/.bin/semantic-release",
    "deploy": "npm run clean && npm run webpack:deploy",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "start": "npm run clean && npm run webpack:start"
  }
}
