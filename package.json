{
  "name": "as-web",
  "description": "Antifragile Systems :earth_africa: website",
  "version": "0.0.0",
  "engines": {
    "node": ">= 6.0.0"
  },
  "author": "Hugo Freire <hugo@antifragile.systems>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antifragile-systems/web.git"
  },
  "bugs": {
    "url": "https://github.com/antifragile-systems/web/issues"
  },
  "homepage": "https://github.com/antifragile-systems/web#readme",
  "dependencies": {
    "@angular/animations": "5.1.0",
    "@angular/cdk": "5.0.0",
    "@angular/common": "5.1.0",
    "@angular/compiler": "5.1.0",
    "@angular/core": "5.1.0",
    "@angular/forms": "5.1.0",
    "@angular/http": "5.1.0",
    "@angular/material": "5.0.2",
    "@angular/platform-browser": "5.1.0",
    "@angular/platform-browser-dynamic": "5.1.0",
    "core-js": "2.5.1",
    "hammerjs": "2.0.8",
    "ng-recaptcha": "3.0.2",
    "rxjs": "5.5.5",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angularclass/hmr": "2.1.3",
    "@angularclass/hmr-loader": "3.0.4",
    "@types/node": "8.5.2",
    "@types/lodash": "4.14.91",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "3.4.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "coveralls": "2.13.3",
    "css-loader": "0.28.7",
    "eslint": "4.12.1",
    "eslint-config-hfreire": "1.0.10",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-mocha": "4.11.0",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-plugin-unicorn": "3.0.0",
    "extract-text-webpack-plugin": "3.0.2",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "1.1.5",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "2.30.1",
    "istanbul": "0.4.5",
    "last-release-github": "1.1.1",
    "mocha": "4.0.1",
    "node-sass": "4.7.2",
    "null-loader": "0.1.1",
    "pre-git": "3.16.0",
    "raw-loader": "0.5.1",
    "sass-loader": "6.0.6",
    "semantic-release": "7.0.2",
    "style-loader": "0.19.0",
    "testdouble": "3.2.6",
    "to-string-loader": "1.1.5",
    "tslint": "5.8.0",
    "tslint-config-standard": "7.0.0",
    "typescript": "2.5.3",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.5",
    "webpack-s3-plugin": "1.0.0-rc.0"
  },
  "greenkeeper": {
    "ignore": [
      "semantic-release",
      "@angular/animations",
      "@angular/cdk",
      "@angular/common",
      "@angular/compiler",
      "@angular/core",
      "@angular/forms",
      "@angular/http",
      "@angular/material",
      "@angular/platform-browser",
      "@angular/platform-browser-dynamic",
      "@angular/router",
      "angular-in-memory-web-api",
      "angular2-moment",
      "hammerjs"
    ]
  },
  "config": {
    "pre-git": {
      "commit-msg": "conventional",
      "allow-untracked-files": true
    }
  },
  "release": {
    "getLastRelease": "last-release-github",
    "analyzeCommits": "simple-commit-message"
  },
  "scripts": {
    "commit": "./node_modules/.bin/commit-wizard",
    "clean": "rm -rf coverage && rm -rf tmp",
    "lint": "node_modules/.bin/eslint . --ext .json --ext .js && node_modules/.bin/tslint 'src/**/*.ts'",
    "coverage": "node_modules/.bin/istanbul cover --include-all-sources --root src --print detail ./node_modules/mocha/bin/_mocha -- --recursive test",
    "test": "npm run clean && npm run lint && npm run coverage",
    "webpack": "npm run clean && ./node_modules/.bin/webpack -p",
    "webpack:server": "./node_modules/.bin/webpack-dev-server --progress --hot --content-base src",
    "compile": "npm run clean && npm run webpack",
    "semantic-release": "./node_modules/.bin/semantic-release pre && node_modules/.bin/semantic-release post",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "deploy": "npm run compile"
  }
}
