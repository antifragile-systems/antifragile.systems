    "semantic-release": "17.3.9",
    "style-loader": "2.0.0",
    "testdouble": "3.16.1",
    "testdouble-jest": "2.0.0",
    "to-string-loader": "1.1.6",
    "ts-jest": "24.3.0",
    "ts-node": "9.1.1",
    "tslint": "5.20.1",
    "tslint-config-standard": "9.0.0",
    "typescript": "3.9.9",
